@model IEnumerable<Mercuryshop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<h2>Quản lý sản phẩm</h2>

<p>
    <a class="btn btn-dark" href="@Url.Action("Create", "Products")">Thêm mới</a>
</p>
<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Kích cỡ
        </th>
        <th>
            Giá gốc
        </th>
        <th>
            Ảnh
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Phân loại
        </th>
        <th>
            Giá khuyến mãi
        </th>
        @*<th>
            Mô tả
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Product_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product_Size)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Product_Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product_Img)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product_Status)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product_Filter)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product_Promotional_Price)
    </td>
    @*<td style="word-wrap:break-word">
        @Html.DisplayFor(modelItem => item.Product_Describe)
    </td>*@
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.Product_Id }, new { @class = "btn btn-success" })
        @Html.ActionLink("Chi tiết", "Details", new { id = item.Product_Id }, new { @class = "btn btn-info" })
        @Html.ActionLink("Xóa", "Delete", new { id = item.Product_Id }, new { @class = "btn btn-danger" })
    </td>
</tr>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</table>
